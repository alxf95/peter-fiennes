<div class="navbar">
  <!-- Logo -->
  <%= link_to "Peter Fiennes", root_path, class: "navbar-home" %>
  <!-- Right Navigation -->
  <div class="navbar-right d-none d-md-block">
    <%= link_to "Books", books_path, class: "navbar-item navbar-link #{'active' if params[:action] == 'books'}" %>
    <%= link_to "Media", media_path, class: "navbar-item navbar-link #{'active' if params[:action] == 'media'}" %>
    <%= link_to "Contact", contact_path, class: "navbar-item navbar-link #{'active' if params[:action] == 'contact'}" %>
  </div>
  <!-- Dropdown appearing on mobile only -->

  <div class="d-block d-md-none">
    <div class="dropdown">
      <i class="fas fa-bars dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      </i>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="/books">Books</a>
        <a class="dropdown-item" href="/media">Media</a>
        <a class="dropdown-item" href="/contact">Contact</a>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="Scripts/jquery-2.1.1.min.js"></script>
<script type="text/javascript" src="Scripts/bootstrap.min.js"></script>
<script>
$(document).ready(function(){
    $(".dropdown-toggle").dropdown("toggle");
});
</script>

<% if false %>
  <div class="navbar-item d-block d-md-none">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
        <li><a href="/books">Books</a></li>
        <li><a href="/media">Media</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
  </div>
<% end %>
