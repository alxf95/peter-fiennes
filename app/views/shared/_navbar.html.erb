<div class="navbar">
  <!-- Logo -->
  <%= link_to "Peter Fiennes", root_path, class: "navbar-home" %>
  <!-- Right Navigation -->
  <div class="navbar-right d-none d-md-block">
    <%= link_to "Books", books_path, class: "navbar-item navbar-link #{'active' if params[:action] == 'books'}" %>
    <%= link_to "Media", media_path, class: "navbar-item navbar-link #{'active' if params[:action] == 'media'}" %>
    <%= link_to "Contact", contact_path, class: "navbar-item navbar-link #{'active' if params[:action] == 'contact'}" %>
  </div>
  <!-- Dropdown appearing on mobile only -->

  <div class="dropdown d-block d-md-none">
    <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown" id="dropdownMenuButton" aria-haspopup="true" aria-expanded="false"></i>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" href="#">Action</a>
      <a class="dropdown-item" href="#">Another action</a>
      <a class="dropdown-item" href="#">Something else here</a>
    </div>
  </div>
</div>

<% if false %>
  <div class="navbar-item d-block d-md-none">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
        <li><a href="/books">Books</a></li>
        <li><a href="/media">Media</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
  </div>
<% end %>
