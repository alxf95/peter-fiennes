<div class="navbar">
  <!-- Logo -->
  <%= link_to "Peter Fiennes", root_path, id: "navbar-home" %>
  <!-- Right Navigation -->
  <div class="navbar-right d-none d-md-block">
    <a class="navbar-item navbar-link", id="oaaat-link">Books</a>
    <a class="navbar-item navbar-link", id="media-link">Media</a>
    <a class="navbar-item navbar-link", id="about-link">About</a>
    <a class="navbar-item navbar-link", id="contact-link">Contact</a>
  </div>
  <!-- Dropdown appearing on mobile only -->

  <div class="d-block d-md-none">
    <div class="dropdown">
      <i class="fas fa-bars dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      </i>
      <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu" aria-labelled-by="dropdownMenuButton">
        <li><a class="dropdown-item" id="oaaat_click">Books</a></li>
        <li><a class="dropdown-item" href="/media">Media</a></li>
        <li><a class="dropdown-item" href="/contact">Contact</a></li>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>

<script>
  $(".dropdown").on("click", function(){
    $(".dropdown-toggle").dropdown("toggle");
  });
</script>
<script>
  $("#oaaat-link").on("click", function(event){
    console.log(event)
    $('html, body').animate({
      scrollTop: $("#oaaat-anchor").offset().top
    }, 1000);
  });
</script>
<script>
  $("#media-link").on("click", function(event){
    console.log(event)
    $('html, body').animate({
      scrollTop: $("#media-anchor").offset().top
    }, 1000);
  });
</script>
<script>
  $("#about-link").on("click", function(event){
    console.log(event)
    $('html, body').animate({
      scrollTop: $("#about-anchor").offset().top
    }, 1000);
  });
</script>
<script>
  $("#navbar-home").on("click", function(event){
    console.log(event)
    $('html, body').animate({
      scrollTop: $("#banner-anchor").offset().top
    }, 1000);
  });
</script>
<script>
  $(window).scroll(function() {
    if ($(document).scrollTop() >= $(window).height() - 64) {
      $('.navbar').addClass('fill');
    } else {
      $('.navbar').removeClass('fill');
    }
  });
</script>
